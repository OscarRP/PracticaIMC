<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calcula"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscarruizpatricio.practicaimc.CalculaActivity"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tuimc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:id="@+id/text_View_IMC"
        android:layout_marginTop="20dp"/>


    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text=""
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/text_View_Resultado"
        android:layout_below="@+id/text_View_IMC"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=""
        android:textAlignment="center"
        android:id="@+id/text_View_Resultado2"
        android:textStyle="bold"
        android:layout_below="@+id/text_View_Resultado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/volver"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/text_View_Resultado"
        android:layout_alignStart="@+id/text_View_Resultado"
        android:id="@+id/button_Volver" />


</RelativeLayout>
